{
  "name": "udacity-server-api",
  "version": "0.1.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "start": "npm run prettier && nodemon src/server.ts",
    "lint": "eslint ./src --ext .ts",
    "watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./dist --onSuccess \"node ./dist/server.js\"",
    "build": "npx tsc",
    "prettier": "prettier --write --config .prettierrc.json \"src/**/*.ts\" \"spec/**/*.ts\"",
    "test": "npm run prettier && NODE_ENV=test db-migrate --env test up && jest --bail=false --detectOpenHandles ; NODE_ENV=test db-migrate --env test down",
    "clear_test_db": "NODE_ENV=test db-migrate --env test down"
  },
  "author": "Udacity",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "pg": "^8.9.0",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/pg": "^8.6.6",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "eslint": "^8.34.0",
    "jest": "^29.4.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.0"
  }
}
